<h4>Donate to one of these progressive Non-Profit organizations today!</h4>
<br>

<ul class="list-unstyled">
  <% @non_profits.each do |non_profit| %>
    <li><h3><%= link_to "#{non_profit.name}", non_profit_path(non_profit.id) %> </h3></li>
    <hr>
  <% end %>
</ul>
<nav class="navbar navbar-default navbar-fixed-bottom" id="admin-nav">
  <div class="container">
    <%= link_to "Add Non-Profit", new_non_profit_path, class: "btn btn-success pull-right" %>
  </div>
</nav>
